<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/back1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="#40000000"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:onClick="ChangeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable/Able" />

        <Spinner
            android:id="@+id/status_spinner"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_admin"
                android:padding="5dp"
                android:onClick="CancelStatus"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <Button
                android:id="@+id/save_admin"
                android:padding="5dp"
                android:onClick="SaveStatus"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Assign"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:text="Assign Role"/>

        <Spinner
            android:id="@+id/role_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:onClick="CancelRole"
                android:text="Cancel"/>

            <Button
                android:id="@+id/save_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:onClick="SaveRole"
                android:layout_weight="1"
                android:text="Save"/>

        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:onClick="MakaCallAdmin"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@android:drawable/sym_call_outgoing"
            android:text="Make a Call"/>

    </LinearLayout>

</LinearLayout>