    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/geologo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/geologo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="Register" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".HomeScreenUser" />
        <activity android:name=".SendMessage" />
        <activity android:name=".ChangePassword" />
        <activity android:name=".MapsActivity" />
        <activity android:name=".LeaveApply" />
        <activity android:name=".AdminOption" />
        <activity android:name=".AdminOptionStudents" />
        <activity android:name=".ListViewFacilitatorsActivity"/>
        <activity android:name=".timesheets.TimeSheet" />
        <activity
            android:name=".AdminActivity"
            android:label="@string/title_activity_admin"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>